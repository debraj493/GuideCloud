#!/bin/bash
set -euo pipefail

# ========================================================================
#   GUIDECLOUD ULTIMATE VM MANAGER (RYZEN 9 & FULL EDIT EDITION)
# ========================================================================

# Initialize paths
VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

# Supported OS list
declare -A OS_OPTIONS=(
    ["1"]="Ubuntu 22.04|https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    ["2"]="Ubuntu 24.04|https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
    ["3"]="Debian 12|https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
    ["4"]="Fedora 40|https://download.fedoraproject.org/pub/fedora/linux/releases/40/Cloud/x86_64/images/Fedora-Cloud-Base-40-1.14.x86_64.qcow2"
)

display_header() {
    clear
    echo "=========================================================="
    echo "    RYZEN 9 PRO VM MANAGER - GUIDECLOUD"
    echo "=========================================================="
}

# --- Dependencies Check ---
if ! command -v qemu-system-x86_64 &> /dev/null; then
    echo "Installing Dependencies..."
    sudo apt update && sudo apt install -y qemu-system cloud-image-utils wget qemu-utils
fi

# --- Helper Functions ---
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    if [[ -f "$config_file" ]]; then
        source "$config_file"
        return 0
    fi
    return 1
}

list_vms() {
    local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
    if [ ${#vms[@]} -eq 0 ]; then
        echo "No VMs found!"
        return 1
    fi
    echo "Available VMs:"
    for i in "${!vms[@]}"; do
        echo "$((i+1))) ${vms[$i]}"
    done
    return 0
}

# --- Create VM Function (With OS Selection & GHz) ---
create_new_vm() {
    display_header
    echo "[ STEP 1: SELECT OPERATING SYSTEM ]"
    for key in $(echo "${!OS_OPTIONS[@]}" | tr ' ' '\n' | sort); do
        echo "$key) ${OS_OPTIONS[$key]%%|*}"
    done
    read -p "Choice: " os_choice
    
    SELECTED_OS=${OS_OPTIONS[$os_choice]%%|*}
    IMG_URL=${OS_OPTIONS[$os_choice]#*|}

    echo -e "\n[ STEP 2: VM CONFIGURATION ]"
    read -p "VM File Name: " VM_NAME
    read -p "Hostname: " HOSTNAME
    read -p "Username: " USERNAME
    read -p "Password: " PASSWORD
    read -p "RAM (MB) [2048]: " MEMORY
    MEMORY=${MEMORY:-2048}
    read -p "CPU Cores [2]: " CPUS
    CPUS=${CPUS:-2}
    read -p "CPU Clock Speed (GHz) [3.8]: " CPU_GHZ
    CPU_GHZ=${CPU_GHZ:-3.8}
    read -p "Disk Size (e.g. 20G): " DISK_SIZE
    if [[ ! "$DISK_SIZE" =~ [GgMm]$ ]]; then DISK_SIZE="${DISK_SIZE}G"; fi
    read -p "SSH Port [2222]: " SSH_PORT
    SSH_PORT=${SSH_PORT:-2222}

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    if [[ ! -f "$IMG_FILE" ]]; then
        echo "Downloading $SELECTED_OS Image..."
        wget -q --show-progress "$IMG_URL" -O "$IMG_FILE"
    fi

    echo "Resizing Disk to $DISK_SIZE..."
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    # Cloud-init setup
    cat > user-data <<EOC
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    passwd: $(openssl passwd -6 "$PASSWORD")
chpasswd: { list: | \n root:$PASSWORD \n $USERNAME:$PASSWORD, expire: false }
EOC
    cloud-localds "$SEED_FILE" user-data
    rm user-data

    # Save Config
    cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
    echo "Success: VM Created!"
    sleep 2
}

# --- Start VM Function (Ryzen 9 Mode) ---
start_vm() {
    display_header
    if list_vms; then
        read -p "Select VM Number: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        local SELECTED_VM="${vms[$((idx-1))]}"
        
        if load_vm_config "$SELECTED_VM"; then
            echo "Starting $VM_NAME (Ryzen 9 @ $CPU_GHZ GHz)..."
            qemu-system-x86_64 \
                -enable-kvm \
                -m "$MEMORY" \
                -smp "$CPUS" \
                -cpu host,vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor @ ${CPU_GHZ}GHz" \
                -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
                -drive "file=$SEED_FILE,format=raw,if=virtio" \
                -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
                -device virtio-net-pci,netdev=n1 \
                -nographic -serial mon:stdio
        fi
    fi
}

# --- Full Edit Function (RAM, CPU, Hostname, GHz, Password) ---
edit_vm() {
    display_header
    if list_vms; then
        read -p "Select VM Number to Edit: " idx
        local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null))
        local SELECTED_VM="${vms[$((idx-1))]}"
        
        if load_vm_config "$SELECTED_VM"; then
            echo "Editing $VM_NAME (Leave blank to keep current value)"
            read -p "New Hostname [$HOSTNAME]: " n_host
            read -p "New RAM [$MEMORY]: " n_mem
            read -p "New CPU Cores [$CPUS]: " n_cpu
            read -p "New Clock Speed (GHz) [$CPU_GHZ]: " n_ghz
            read -p "New SSH Port [$SSH_PORT]: " n_port
            read -p "New Password [$PASSWORD]: " n_pass
            
            HOSTNAME=${n_host:-$HOSTNAME}
            MEMORY=${n_mem:-$MEMORY}
            CPUS=${n_cpu:-$CPUS}
            CPU_GHZ=${n_ghz:-$CPU_GHZ}
            SSH_PORT=${n_port:-$SSH_PORT}
            PASSWORD=${n_pass:-$PASSWORD}
            
            # Save Updated Config
            cat > "$VM_DIR/$VM_NAME.conf" <<EOC
VM_NAME="$VM_NAME"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOC
            echo "Successfully Updated $VM_NAME!"
            sleep 2
        fi
    fi
}

# --- Main Menu ---
while true; do
    display_header
    echo "1) Create New VM (With OS Selection)"
    echo "2) Start VM (Ryzen 9 Mode)"
    echo "3) Edit VM Configuration (Full Edit)"
    echo "4) Delete VM"
    echo "5) Exit"
    read -p "Select: " opt
    case $opt in
        1) create_new_vm ;;
        2) start_vm ;;
        3) edit_vm ;;
        4) if list_vms; then read -p "Select VM to Delete: " idx; local vms=($(find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; 2>/dev/null)); rm -f "$VM_DIR/${vms[$((idx-1))]}.img" "$VM_DIR/${vms[$((idx-1))]}-seed.iso" "$VM_DIR/${vms[$((idx-1))]}.conf"; echo "Deleted!"; sleep 2; fi ;;
        5) exit 0 ;;
    esac
done
