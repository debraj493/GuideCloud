#!/bin/bash
set -euo pipefail

# ========================================================================
#   Enhanced Multi-VM Manager (Ryzen 9 & Custom GHz Integrated)
#   Powered by GUIDECLOUD
# ========================================================================

# Function to display header
display_header() {
    clear
    cat << "EOF"
========================================================================
  _    _  ____  _____ _____ _   _  _____ ____   ______     ________
 POWERED BY GUIDECLOUD (RYZEN 9 OPTIMIZED)
========================================================================
EOF
    echo
}

# Function to display colored output
print_status() {
    local type=$1
    local message=$2
    case $type in
        "INFO") echo -e "\033[1;34m[INFO]\033[0m $message" ;;
        "WARN") echo -e "\033[1;33m[WARN]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31m[ERROR]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32m[SUCCESS]\033[0m $message" ;;
        "INPUT") echo -e "\033[1;36m[INPUT]\033[0m $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to check dependencies and AUTO-INSTALL
check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "cloud-localds" "qemu-img")
    local missing_deps=()
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then missing_deps+=("$dep"); fi
    done
    if [ ${#missing_deps[@]} -ne 0 ]; then
        print_status "INFO" "Installing missing dependencies: ${missing_deps[*]}"
        sudo apt update && sudo apt install -y qemu-system cloud-image-utils wget qemu-utils
    fi
}

# Function to validate input
validate_input() {
    local type=$1
    local value=$2
    case $type in
        "number") [[ "$value" =~ ^[0-9]+$ ]] ;;
        "size") [[ "$value" =~ ^[0-9]+[GgMm]$ ]] ;;
        "port") [[ "$value" =~ ^[0-9]+$ ]] && [ "$value" -ge 22 ] && [ "$value" -le 65535 ] ;;
        "ghz") [[ "$value" =~ ^[0-9]+(\.[0-9]+)?$ ]] ;;
        "name") [[ "$value" =~ ^[a-zA-Z0-9_-]+$ ]] ;;
    esac
}

# Load/Save Config (Updated with CPU_GHZ)
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    if [[ -f "$config_file" ]]; then
        source "$config_file"
        return 0
    fi
    return 1
}

save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
CPU_GHZ="$CPU_GHZ"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
EOF
    print_status "SUCCESS" "Configuration saved."
}

# Create New VM (With Ryzen 9 & GHz Option)
create_new_vm() {
    print_status "INFO" "Creating a new Ryzen 9 Optimized VM"
    
    read -p "$(print_status "INPUT" "Enter VM Name: ")" VM_NAME
    read -p "$(print_status "INPUT" "Disk Size (default 20G): ")" DISK_SIZE
    DISK_SIZE="${DISK_SIZE:-20G}"
    read -p "$(print_status "INPUT" "Memory in MB (default 2048): ")" MEMORY
    MEMORY="${MEMORY:-2048}"
    read -p "$(print_status "INPUT" "CPU Cores (default 2): ")" CPUS
    CPUS="${CPUS:-2}"
    
    # New GHz Selection Feature
    while true; do
        read -p "$(print_status "INPUT" "Enter CPU Clock Speed in GHz (e.g., 3.8): ")" CPU_GHZ
        CPU_GHZ="${CPU_GHZ:-2.8}"
        if validate_input "ghz" "$CPU_GHZ"; then break; else print_status "ERROR" "Invalid GHz format."; fi
    done

    read -p "$(print_status "INPUT" "SSH Port (default 2222): ")" SSH_PORT
    SSH_PORT="${SSH_PORT:-2222}"

    # Default Setup
    USERNAME="root"
    PASSWORD="root"
    HOSTNAME="$VM_NAME"
    OS_TYPE="Ubuntu"
    IMG_URL="https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
    GUI_MODE=false

    # Image Handling
    if [[ ! -f "$IMG_FILE" ]]; then
        print_status "INFO" "Downloading Image..."
        wget -O "$IMG_FILE" "$IMG_URL"
        qemu-img resize "$IMG_FILE" "$DISK_SIZE"
    fi

    # Cloud-init
    cat > user-data <<EOF
#cloud-config
password: $PASSWORD
chpasswd: { expire: False }
ssh_pwauth: True
EOF
    cloud-localds "$SEED_FILE" user-data
    save_vm_config
}

# Start VM (With Auto KVM/TCG & Ryzen 9 Branding)
start_vm() {
    local vm_name=$1
    if load_vm_config "$vm_name"; then
        local ACCEL="tcg"
        local CPU_MODEL="max"
        
        if [ -e /dev/kvm ]; then
            ACCEL="kvm"
            CPU_MODEL="host"
            print_status "SUCCESS" "KVM Acceleration Enabled"
        else
            print_status "WARN" "KVM not found. Using TCG Emulation"
        fi

        print_status "INFO" "Starting Ryzen 9 5950X VM @ ${CPU_GHZ} GHz..."
        
        qemu-system-x86_64 \
            -accel "$ACCEL" \
            -m "$MEMORY" \
            -smp "$CPUS" \
            -cpu "$CPU_MODEL",vendor=AuthenticAMD,model_id="AMD Ryzen 9 5950X 16-Core Processor @ ${CPU_GHZ}GHz" \
            -drive "file=$IMG_FILE,format=qcow2" \
            -drive "file=$SEED_FILE,format=raw" \
            -nographic \
            -netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22" \
            -device virtio-net-pci,netdev=n0
    fi
}

# Main Logic (Keeping your original menu structure)
check_dependencies
VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

while true; do
    display_header
    echo "1) Create a new VM"
    echo "2) Start a VM"
    echo "0) Exit"
    read -p "Choice: " choice
    case $choice in
        1) create_new_vm ;;
        2) read -p "Enter VM Name: " n; start_vm "$n" ;;
        0) exit 0 ;;
    esac
    read -p "Press Enter to continue..."
done

