#!/bin/bash
set -euo pipefail

# =============================
# Enhanced Multi-VM Manager (Ryzen 9 + Full Control)
# =============================

VM_DIR="$HOME/vms"
mkdir -p "$VM_DIR"

display_header() {
    clear
    echo "========================================================================"
    echo "  GUIDECLOUD VM MANAGER - RYZEN 9 ENABLED (FULL CONTROL)"
    echo "========================================================================"
}

print_status() {
    local type=$1
    local message=$2
    case $type in
        "INFO") echo -e "\033[1;34m[INFO]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32m[SUCCESS]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31m[ERROR]\033[0m $message" ;;
    esac
}

load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    if [[ -f "$config_file" ]]; then source "$config_file"; return 0; fi
    return 1
}

save_vm_config() {
    cat > "$VM_DIR/$VM_NAME.conf" <<EOF
VM_NAME="$VM_NAME"
MEMORY="$MEMORY"
CPUS="$CPUS"
DISK_SIZE="$DISK_SIZE"
SSH_PORT="$SSH_PORT"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
IMG_FILE="$VM_DIR/$VM_NAME.img"
SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
EOF
}

# --- Create New VM with Full Choice ---
create_new_vm() {
    display_header
    read -p "Enter VM Name: " VM_NAME
    read -p "Enter Username: " USERNAME
    read -p "Enter Password: " PASSWORD
    read -p "Enter RAM (MB) [Example: 2048]: " MEMORY
    read -p "Enter CPU Cores [Example: 2]: " CPUS
    read -p "Enter Disk Size [Example: 20G]: " DISK_SIZE
    read -p "Enter SSH Port [Example: 3333]: " SSH_PORT

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"

    print_status "INFO" "Preparing VM..."
    if [[ ! -f "$IMG_FILE" ]]; then
        wget -q --show-progress https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img -O "$IMG_FILE"
    fi
    qemu-img resize "$IMG_FILE" "$DISK_SIZE"

    cat > user-data <<EOF
#cloud-config
ssh_pwauth: true
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(openssl passwd -6 "$PASSWORD")
EOF
    echo "instance-id: iid-$VM_NAME" > meta-data
    cloud-localds "$SEED_FILE" user-data meta-data
    rm user-data meta-data

    save_vm_config
    print_status "SUCCESS" "VM '$VM_NAME' Created Successfully!"
    sleep 2
}

# --- Start VM (Ryzen 9) ---
start_vm() {
    local name=$1
    if load_vm_config "$name"; then
        # Check if port is busy
        if ss -tln | grep -q ":$SSH_PORT "; then
            print_status "ERROR" "Port $SSH_PORT is busy! Use 'Edit' to change port."
            sleep 3
            return
        fi

        print_status "SUCCESS" "Starting $name as AMD Ryzen 9 5950X..."
        qemu-system-x86_64 \
            -enable-kvm \
            -m "$MEMORY" \
            -smp "$CPUS",sockets=1,cores="$CPUS",threads=1 \
            -cpu EPYC,vendor=AuthenticAMD,model-id="AMD Ryzen 9 5950X 16-Core Processor",+topoext,+invtsc \
            -drive "file=$IMG_FILE,format=qcow2,if=virtio" \
            -drive "file=$SEED_FILE,format=raw,if=virtio" \
            -netdev user,id=n1,hostfwd=tcp::$SSH_PORT-:22 \
            -device virtio-net-pci,netdev=n1 \
            -nographic -serial mon:stdio
    fi
}

# --- Delete VM ---
delete_vm() {
    read -p "Enter VM Name to DELETE: " name
    if [[ -f "$VM_DIR/$name.conf" ]]; then
        source "$VM_DIR/$name.conf"
        rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$name.conf"
        print_status "SUCCESS" "VM '$name' Deleted!"
    else
        print_status "ERROR" "VM not found!"
    fi
    sleep 2
}

# --- Edit VM ---
edit_vm() {
    read -p "Enter VM Name to EDIT: " name
    if load_vm_config "$name"; then
        echo "Editing $name (Press Enter to keep current value)"
        read -p "New RAM [$MEMORY]: " new_mem
        read -p "New CPU [$CPUS]: " new_cpu
        read -p "New Port [$SSH_PORT]: " new_port
        
        MEMORY=${new_mem:-$MEMORY}
        CPUS=${new_cpu:-$CPUS}
        SSH_PORT=${new_port:-$SSH_PORT}
        
        save_vm_config
        print_status "SUCCESS" "Config Updated!"
    fi
    sleep 2
}

# --- Main Menu ---
while true; do
    display_header
    echo "1) Create New VM (Set RAM, CPU, Disk, Port)"
    echo "2) Start VM (Ryzen 9 Mode)"
    echo "3) Edit VM (Change RAM, CPU, Port)"
    echo "4) Delete VM (Remove Files)"
    echo "5) Exit"
    read -p "Option: " opt
    case $opt in
        1) create_new_vm ;;
        2) read -p "Enter Name: " n; start_vm "$n" ;;
        3) edit_vm ;;
        4) delete_vm ;;
        5) exit 0 ;;
    esac
done

